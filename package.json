{
    "name": "personal-website",
    "version": "3.0.0",
    "scripts": {
        "build:assets": "node build-assets.js",
        "build:css": "node build-css.js",
        "build:html": "node build-html.js",
        "build:server": "node build-server.js",
        "build": "npm run build:assets && npm run build:html && npm run build:css",
        "deploy": "node deploy.js",
        "start": "nodemon --exec \"npm run build:assets && npm run build:html && npm run build:css && npm run build:server\""
    },
    "devDependencies": {
        "ejs": "^3.1.8",
        "express": "^4.18.1",
        "fs-extra": "^10.1.0",
        "nodemon": "^3.1.9",
        "prettier": "^2.6.2",
        "ssh2-sftp-client": "^9.0.0",
        "tailwindcss": "^3.0.24"
    },
    "nodemonConfig": {
        "ignore": [
            "build/*",
            "dist/*"
        ],
        "ext": "html,js,css"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
